<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="5"
    android:layout_marginBottom="10dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher_round"
            android:id="@+id/expensesActivityListViewThemeDetailImageView"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LODGING"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:id="@+id/expensesActivityListViewThemeDetailTextView"
            android:layout_marginLeft="10dp"/>


    </LinearLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1.5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 JULY 2017"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_marginTop="10dp"
            android:id="@+id/expensesActivityListViewThemeDetailTextView2" />

    </LinearLayout>


    <View
        android:layout_width="1dp"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:background="@android:color/darker_gray"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Rs 1000"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_weight="1.5"
        android:layout_marginTop="15dp"
        android:id="@+id/expensesActivityListViewThemeDetailTextView3" />


</LinearLayout>